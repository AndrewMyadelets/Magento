<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                 xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="customer_message">
        <column xsi:type="int" name="message_id" padding="10" unsigned="true" nullable="false" identity="true" comment="message_id"/>
        <column xsi:type="varchar" name="message" nullable="false" length="255" comment="message"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="message_id"/>
        </constraint>
    </table>
</schema>